<sardine:VesselUserControl
             x:Class="Sardine.Devices.Hamamatsu.Camera.Views.WPF.CameraInfoUI"
             x:TypeArguments="hamamatsu:IHamamatsuAPIWrapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sardine="clr-namespace:Sardine.Core.Views.WPF;assembly=Sardine.Core.Views.WPF"
             xmlns:hamamatsu="clr-namespace:Sardine.Devices.Hamamatsu.Camera.API;assembly=Sardine.Devices.Hamamatsu.Camera.API"
             d:DataContext="{d:DesignInstance Type=hamamatsu:IHamamatsuAPIWrapper}"
             mc:Ignorable="d" 
             Height="150" Width="200" Background="Gray"
             >
    <Grid>
        <StackPanel>
            <ListBox x:Name="ListBox_Lines" Height="70" Width="180" Margin="0,0" Background="DimGray" Foreground="White" SelectedIndex="-1"/>
            <WrapPanel HorizontalAlignment="Center" Margin="0,5">
                <Button x:Name="Button_Fetch" Click="Button_Fetch_Click" Width="95" Content="Fetch Cameras">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=IsFetching, UpdateSourceTrigger=PropertyChanged}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </WrapPanel>
            <Label d:Content="20.123.456.789" Content="{Binding Path=NativeVersion}" Foreground="White" FontSize="9" VerticalAlignment="Top" Margin="5,-5,0,0"/>
        </StackPanel>
    </Grid>
</sardine:VesselUserControl>
