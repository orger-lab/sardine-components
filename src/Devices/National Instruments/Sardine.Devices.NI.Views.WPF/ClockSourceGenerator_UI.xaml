<sardine:VesselUserControl
             x:Class="Sardine.Devices.NI.Views.WPF.ClockSourceGenerator_UI"
             x:TypeArguments="ni:ClockSource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sardine.Devices.NI.Views.WPF"
             xmlns:sardine="clr-namespace:Sardine.Core.Views.WPF;assembly=Sardine.Core.Views.WPF"
             xmlns:ni="clr-namespace:Sardine.Devices.NI.DAQ.Controllers;assembly=Sardine.Devices.NI.DAQ"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=ni:ClockSource}"
             Height="150" Width="150" Background="Gray">
    <Grid>
        <StackPanel Margin="0,0,0,0">
            <Label Content="Rate (Hz)"/>
            <TextBox Text="{Binding Path=Rate, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ClockArmed, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button x:Name="Button_Arm" Click="Button_Arm_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ClockArmed, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="Content" Value="Disarm"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=ClockArmed, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                <Setter Property="Content" Value="Arm"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=ClockRunning, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="Button_Start" Click="Button_Start_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ClockRunning, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="Content" Value="Stop"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=ClockRunning, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                <Setter Property="Content" Value="Start"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=ClockArmed, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</sardine:VesselUserControl>
