<sardine:VesselUserControl
             x:Class="Sardine.Devices.NI.Views.WPF.DaqInfoUI"
             x:TypeArguments="ni:DAQBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sardine.Devices.NI.Views.WPF"
             xmlns:sardine="clr-namespace:Sardine.Core.Views.WPF;assembly=Sardine.Core.Views.WPF"
             xmlns:ni="clr-namespace:Sardine.Devices.NI.DAQ;assembly=Sardine.Devices.NI.DAQ"
             mc:Ignorable="d" 
    UpdateOnlyWithEvents="True"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type=ni:DAQBoard}"
             Height="150" Width="300" Background="Gray">
    <Grid>
        <StackPanel>
            <DockPanel>
            <StackPanel Orientation="Horizontal" Height="30" Width="200">
                <Label Content="NIDAQ  -" Foreground="AliceBlue" FontSize="16" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
                <Label d:Content="ProductType" Content="{Binding Path=ProductType}" Foreground="AliceBlue" FontSize="16" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right"  Height="30" Width="100">
                <Label d:Content="DeviceName" Content="{Binding Path=DeviceName}" Foreground="AliceBlue" FontSize="12" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0,-5,0,-10"/>
                <Label d:Content="DeviceName" Content="{Binding Path=SerialNumber}" Foreground="AliceBlue" FontSize="10" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
            </StackPanel>
            </DockPanel>
            <ListBox x:Name="ListBox_Channels" ItemsSource="{Binding Path=ActiveChannels}" Width="300" Height="120">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <Ellipse x:Name="EllipseReservedStatus" Width="15" Height="15" >
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsReserved, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                                <Setter Property="Fill" Value="LightGray"/>
                                                <Setter Property="ToolTip" Value="Unreserved"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Path=IsReserved, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                <Setter Property="Fill" Value="MediumPurple"/>
                                                <Setter Property="ToolTip" Value="{Binding Path=ReservedBy.Name}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Margin="10,0,0,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}: {1}">
                                    <Binding Path="FriendlyName" />
                                    <Binding Path="ChannelName" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        </WrapPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        
    </Grid>
</sardine:VesselUserControl>
